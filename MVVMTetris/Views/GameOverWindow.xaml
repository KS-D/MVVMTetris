<Window x:Class="MVVMTetris.Views.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMTetris.Views"
        mc:Ignorable="d"
        Title="GameOver" Height="150" Width="250">
    <Grid Background="Gray">
        <TextBlock Text="Game Over:" FontSize="35" Margin="30,10,0,0"/>
        <TextBlock Text="Press R to Restart" FontSize="20" Margin="40, 55, 0,0"/>
        <Button Content="Exit Game Over Screen" Margin="46,90,56.2,5.8" Click="Button_Click"/>
    </Grid>
</Window>
